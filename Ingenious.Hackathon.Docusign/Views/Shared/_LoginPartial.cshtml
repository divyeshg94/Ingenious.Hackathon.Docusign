@using System.Security.Principal
<ul class="navbar-nav">
    
    @if (User.Identity?.IsAuthenticated == true)
    {
        <li class="nav-item dropdown ml-auto">
            <div class="media-body ml-2 d-none d-lg-block" style="padding-top: 7px;">
                <span class="mb-0 text-sm font-weight-bold">Welcome @User.Identity?.Name</span>
            </div>
        </li>
        <li class="nav-item ml-auto">
            <a class="nav-link text-dark" href="/Account/SignOut">Sign Out!</a>
        </li>
    }
    else
    {
        <li class="nav-item ml-auto">
            <a class="nav-link text-dark" href="/Account/SignIn">Sign in!</a>
        </li>
    }
</ul>
